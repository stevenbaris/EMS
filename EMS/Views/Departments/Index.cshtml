@model IEnumerable<EMS.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1><b>Departments</b></h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.DepartmentId">Edit</a> 
                    <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.DepartmentId">Details</a> 
                    <a asp-action="Delete" class="btn btn-outline-primary" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
