@model IEnumerable<EMS.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1><b>Employee List</b></h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Employee Name
            </th>
            <th scope="col">
                Date of Birth
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.EmployeeId">Edit</a> 
                    <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.EmployeeId">Details</a> 
                    <a asp-action="Delete" class="btn btn-outline-primary" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
